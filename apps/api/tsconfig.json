{
  "extends": "@kanpeki/typescript-config/base.json",
  "compilerOptions": {
    "allowJs": true,

    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    "lib": ["ES2022"],

    "baseUrl": "src",
    "paths": {
      "@config": ["./config/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}